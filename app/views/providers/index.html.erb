<% title 'Service List' -%>
<h2>
   <div>
      Welcome to
   <%= current_provider.username %> Service Pending Bid List
   </div>
</h2>
<% if !@myrequest3.empty? %>   
<h1>
</h1>
<table id = "providerlist" class="providerlist">
  <thead>
    <tr>
      <th>Appliance </th>
      <th>Brand </th>
      <th>Warranty </th>
      <th>ProblemDescription</th>
      <th>ServiceCtrLoc</th>
      <th>ServiceByDt</th>
      <th>BidEndByDt</th>
      <th>BidAmount</th>
      <th>Status</th>
      <th>BidAwardedTo</th>
    </tr>
  </thead>

  <tbody>
    <% @myrequest3.each do |servicerequest| %>
      <tr>
        <td><%= servicerequest.appliance %></td>
        <td><%= servicerequest.brand %></td>
        <td><%= servicerequest.warranty %></td>
        <td><%= servicerequest.problem_desc %></td>
        <td><%= servicerequest.service_ctr_location %></td>
        <td><%= servicerequest.service_by %></td>
        <td><%= servicerequest.bidend %></td>
        <td>
          <ol>
            <% for b in servicerequest.bids %>
               <li><%= b.bidamt %><%= '<bidder: ' %>
                  <%= "#{b.provider_id == current_provider.id ? 'myself' : b.provider_id}" %><%= '>' %> 
               </li>
            <% end %>
           </ol>
       </td>
        <td><%= servicerequest.status %></td>
        <td><%= "#{servicerequest.provider_id == current_provider.id ? 'me' : servicerequest.provider_id}" %></td>
       </tr>
    <% end %>
  </tbody>
</table>
<% else %>
    No service list.
<% end %>
